void PWM_Init(void)
{
	TA0CTL = TASSEL__SMCLK+MC__UP+TACLR;

	TA0CCR0 = 1250;

	TA0CCTL1=OUTMOD_7;
	TA0CCR1 = 1250*3/4;

	TA0CCTL2=OUTMOD_7;
	TA0CCR2 = 1250/4;

	TA0CCTL3=OUTMOD_7;
	TA0CCR3= 1250/4;

	TA0CCTL4=OUTMOD_7;
	TA0CCR4 = 1250/4;
}
