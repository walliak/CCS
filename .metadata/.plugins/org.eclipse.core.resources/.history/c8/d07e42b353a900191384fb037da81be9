
#include <key.h>
#include "led.h"
#include "lcd.h"
#include "motor.h"
#include "MSP430F5529.h"

void delay(int ms)
{
  int i = 0,j=0;
  for(;i<500;i++)
  {
    for(j = 0;j<ms;j++);
  }
}

void main (void)
{

	WDTCTL=WDTPW+WDTHOLD; //关闭看门狗

	newLCDInit();
	LedInit();
	KeyPort_Init();

	Clear();
	LCDWrite(W_CMD,0xA7);	  //反显命令
	DrawcharS("00:00:00",1,4);
	delay(2000);
	Clear();

	_enable_interrupts();							//使能总中断
	Motor_Init();

	Motor_Circle();
	__bis_SR_register(LPM0_bits) ;

 }
